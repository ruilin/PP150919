<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
	<style name="anim_popup_dir">
        <item name="android:windowEnterAnimation">@anim/pic_selector_slide_in</item>
        <item name="android:windowExitAnimation">@anim/pic_selector_slide_out</item>
    </style>
    
    <style name="nav_bg_blue">
        <item name="android:background">@color/title_bar_bg_blue</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">44.0dip</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>
    <style name="font_nav_title_white">
        <item name="android:textSize">20.0dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="common_nav_btn_left">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">12.0dip</item>
        <item name="android:paddingRight">8.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="common_nav_btn_right">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8.0dip</item>
        <item name="android:paddingRight">12.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="v4_nav_shadow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-2.0dip</item>
    </style>

    <style name = "CustomTitleBackground">
		<item name="android:background">@color/title_bg</item>
	</style>
    <style name="title" parent="android:Theme">
	    <item name="android:windowTitleSize">50dp</item>   
	    <item name="android:windowTitleBackgroundStyle">@style/CustomTitleBackground</item>   
	</style>
	
    
    <!-- 底部菜单弹出效果 -->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
 		<!-- 边框 -->
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
 		<!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
 		<!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
 		<!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
 		<!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
 		<!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
