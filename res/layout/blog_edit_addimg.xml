<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:orientation="vertical" >
        <ImageView
	  		android:layout_marginTop="@dimen/add_img_gap"
	  		android:layout_marginLeft="@dimen/add_img_gap"
			android:layout_marginRight="@dimen/add_img_gap"
	  		android:layout_marginBottom="@dimen/add_img_gap"
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/gridview_addpic" />
    </RelativeLayout>
</LinearLayout>